{
  "name": "halo-infinite-api",
  "version": "12.0.1",
  "description": "An NPM package for accessing the official Halo Infinite API.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./token-persisters": {
      "types": "./dist/core/token-persisters/index.d.ts",
      "import": "./dist/core/token-persisters/index.js",
      "require": "./dist/core/token-persisters/index.cjs"
    }
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsup",
    "prepack": "npm run build",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GravlLift/halo-infinite-api.git"
  },
  "keywords": [
    "halo",
    "infinite",
    "api"
  ],
  "author": "GravlLift",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/GravlLift/halo-infinite-api/issues"
  },
  "homepage": "https://github.com/GravlLift/halo-infinite-api#readme",
  "devDependencies": {
    "@swc/core": "^1.13.20",
    "@types/jest": "^29.5.12",
    "@types/luxon": "^3.3.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.5.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.1",
    "tsup": "^8.5.0",
    "typescript": "^5.3.3",
    "yargs": "^17.7.1"
  },
  "dependencies": {
    "@azure/msal-node": "^2.2.0",
    "axios": "^1.6.2",
    "cockatiel": "^3.1.2",
    "expiry-map": "^2.0.0",
    "luxon": "^3.3.0",
    "pkce-challenge": "^3.1.0",
    "simple-oauth2": "^5.0.0"
  },
  "publishConfig": {
    "@GravlLift:registry": "https://npm.pkg.github.com"
  }
}
